@model Caalinder.Models.RegisterViewModel
@{
    ViewBag.Title = "Cadastro de Cliente";
}

<style>
    .page-wrapper-row{
        position: sticky !important;
        bottom: 0;
        width: 100%;
    }
</style>
<div class="container">
    <div class="row">
        <div class="span12" style="text-align:center; margin: 0 auto;">

            <h2 style="padding-right:20px;">@ViewBag.Title</h2>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 style="padding-right:20px;">Crie uma nova conta</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="container">
                    <div class="row">
                        <div class="span12" style="text-align:center; margin: 0 auto;padding-right:70px;">
                            <div class="form-group" style="width: 400px; margin: 0 auto;">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="span12" style="text-align:center; margin: 0 auto;padding-right:70px;">
                            <div class="form-group" style="width: 400px; margin: 0 auto; padding-top: 15px;">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="span12" style="text-align:center; margin: 0 auto; padding-right:70px;">
                            <div class="form-group" style="width: 400px; margin: 0 auto; padding-top: 15px;">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="span12" style="text-align:center; margin: 0 auto; padding-right:70px;">
                            <div class="form-group" style="width: 400px; margin: 0 auto; padding-top: 7px;">
                                @Html.LabelFor(m => m.name, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="span12" style="text-align:center; margin: 0 auto; padding-right:70px;">
                            <div class="form-group" style="width: 400px; margin: 0 auto; padding-top: 15px;">
                                @Html.LabelFor(m => m.Cep, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Cep, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <div class="span12" style="text-align:center; margin: 0 auto;padding-right:70px;">
                            <div class="form-group" style="width: 400px; margin: 0 auto; padding-top: 15px;">
                                @Html.LabelFor(m => m.Pais, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Pais, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="span12" style="text-align:center; margin: 0 auto;padding-right:70px;">
                            <div class="form-group" style="width: 400px; margin: 0 auto; padding-top: 15px;">
                                @Html.LabelFor(m => m.Estado, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Estado, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="span12" style="text-align:center; margin: 0 auto;padding-right:70px;">
                            <div class="form-group" style="width: 400px; margin: 0 auto; padding-top: 15px;">
                                @Html.LabelFor(m => m.Cidade, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Cidade, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="span12" style="text-align:center; margin: 0 auto;padding-right:70px;">
                            <div class="form-group" style="width: 400px; margin: 0 auto; padding-top: 15px;">
                                @Html.LabelFor(m => m.endereço, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.endereço, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="span12" style="text-align:center; margin: 0 auto;padding-right:70px;">
                            <div class="form-group" style="width: 400px; margin: 0 auto; padding-top: 15px;">
                                @Html.LabelFor(m => m.Haras, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Haras, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <div class="span12" style="text-align:center; margin: 0 auto;padding-right:100px;">
                            <div class="form-group" style="width: 400px; margin: 0 auto; padding-top: 15px;">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-default" value="Registrar-se" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>
