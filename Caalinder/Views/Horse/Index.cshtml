@model IEnumerable<Caalinder.Models.HorseModel>

@{
    ViewBag.Title = "Meus Cavalos";
}

<h2>Meus Cavalos</h2>

@*<p>
        @Html.ActionLink("Adicionar Cavalos", "Create")
    </p>*@
<h3></h3>
<div class="portlet light">
    <div class="icon btn-plus-g" style="margin:5px;">
        <a class="topbar-link btn btn-circle green" href="@Url.Action("Create", "Horse")" title="Cavalo">
            <i class="fas fa-horse-head"> +Cavalo </i>
        </a>
    </div>
</div>
<div class="portlet-body">
    <div id="sample_1_wrapper" class="dataTables_wrapper no-footer">
        <div class="table-scrollable">
            <table class="table table-striped table-bordered table-hover table-header-fixed dataTable no-footer" id="sample_1" role="grid" aria-describedby="sample_1_info">
                <thead>
                    <tr role="row" class="odd" style="background-color: black; color: #E9E9F1; border: 3px solid red;">
                        <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                            aria-label="activate to sort column ascending" style="width: 200px;">
                            Cavalo
                        </th>
                        <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                            aria-label="activate to sort column descending" style="width: 200px;">
                            Sexo
                        </th>
                        <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                            aria-label="activate to sort column ascending" style="width: 200px;">
                            Raça
                        </th>
                        <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                            aria-label="activate to sort column ascending" style="width: 200px;">
                            Data de Nascimento
                        </th>
                        <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                            aria-label="activate to sort column ascending" style="width: 200px;">
                            Descrição
                        </th>
                        <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                            aria-label="activate to sort column ascending" style="width: 200px;">
                            Ações
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr role="row" class="odd">
                            <td class="text-center" style="padding-top:30px;">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="text-center" style="padding-top:30px;">
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td class="text-center" style="padding-top:30px;">
                                @Html.DisplayFor(modelItem => item.HorseBrand)
                            </td>
                            <td class="text-center" style="padding-top:30px;">
                                @item.HorseBirth.ToString("dd/MM/yyyy")
                            </td>
                            <td class="text-center" style="padding-top:30px;">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="text-center" style="width:70px;">
                                <a class="topbar-link btn btn-circle dark btn-outline" style="margin:5px;" href="@Url.Action("Edit", "Horse", new {id=item.Id })" title="Editar">
                                    <i class="fa fa-edit" style="width:60px"> Editar </i>
                                </a>
                                <a class="topbar-link btn btn-circle red btn-outline" href="@Url.Action("Delete", "Horse", new {id=item.Id })" title="Deletar">
                                    <i class="fa fa-trash" style="width:60px"> Deletar </i>
                                </a>
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                                @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
