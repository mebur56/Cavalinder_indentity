@model Caalinder.Models.HorseViewModel
@using Caalinder.Models

@{
    ViewBag.Title = "Create";
}

<h2>Criar Cavalo</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="container">
            <div class="row">
                <div class="span12" style="text-align:center; margin: 0 auto;">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="container">
                        <div class="row">
                            <div class="span12" style="text-align:center; margin: 0 auto;">
                                <div class="form-group" style="width: 400px; margin: 0 auto;">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="container">
                        <div class="row">
                            <div class="span12" style="text-align:center; margin: 0 auto;">
                                <div class="form-group" style="width: 400px; margin: 0 auto;">
                                    @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(m => m.Gender,
                                                 new SelectList(Enum.GetValues(typeof(GenderEnum))),
                                                 "Selecionar Sexo", htmlAttributes: new { @class = "form-control control-label col-md-6" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="container">
                        <div class="row">
                            <div class="span12" style="text-align:center; margin: 0 auto;">
                                <div class="form-group" style="width: 400px; margin: 0 auto;">
                                    @Html.LabelFor(model => model.HorseBrand, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.HorseBrand, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.HorseBrand, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="container">
                        <div class="row">
                            <div class="span12" style="text-align:center; margin: 0 auto;">
                                <div class="form-group" style="width: 400px; margin: 0 auto;">
                                    @Html.LabelFor(model => model.HorseBirth, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.HorseBirth, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.HorseBirth, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="container">
                        <div class="row">
                            <div class="span12" style="text-align:center; margin: 0 auto;">
                                <div class="form-group" style="width: 400px; margin: 0 auto;">
                                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="container">
                        <div class="row">
                            <div class="span12" style="text-align:center; margin: 0 auto;">
                                <div class="form-group" style="width: 400px; margin: 0 auto;">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
