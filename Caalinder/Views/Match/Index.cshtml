@model IEnumerable<Caalinder.Models.HorseModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Dono
        </th>
        <th>
            Cavalo
        </th>
        <th>
            Sexo
        </th>
        <th>
            Raça
        </th>
        <th>
            Data de Nascimento
        </th>
        <th>
            Descrição
        </th>
        <th>
            Ações
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorseBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorseBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Like", "SelecionarCavalo", new { id = item.Id }) |
                @Html.ActionLink("Deslike", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
