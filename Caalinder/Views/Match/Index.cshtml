@model IEnumerable<Caalinder.Models.HorseModel>

@{
    ViewBag.Title = "Index";
}

<h2 style="padding-left:14px;">Like</h2>

<div class="col-lg-12 col-md-12">
    <div class="portlet-body">
        <div id="sample_1_wrapper" class="dataTables_wrapper no-footer">
            <div class="table-scrollable">
                <table class="table table-striped table-bordered table-hover table-header-fixed dataTable no-footer" id="sample_1" role="grid" aria-describedby="sample_1_info">
                    <thead>
                        <tr role="row" class="odd" style="background-color: black;border: 3px solid red; color: #E9E9F1">
                            <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                                aria-label="activate to sort column ascending" style="width: 200px;">
                                Dono
                            </th>
                            <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                                aria-label="activate to sort column descending" style="width: 200px;">
                                Cavalo
                            </th>
                            <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                                aria-label="activate to sort column ascending" style="width: 200px;">
                                Sexo
                            </th>
                            <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                                aria-label="activate to sort column ascending" style="width: 200px;">
                                Raça
                            </th>
                            <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                                aria-label="activate to sort column ascending" style="width: 200px;">
                                Data de Nascimento
                            </th>
                            <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                                aria-label="activate to sort column ascending" style="width: 200px;">
                                Descrição
                            </th>
                            <th class="text-center" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending"
                                aria-label="activate to sort column ascending" style="width: 200px;">
                                Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr role="row" class="odd">
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.ApplicationUser.name)
                            </td>
                            <td class="text-center"style="padding-top:18px;">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="text-center" style="padding-top:18px;">
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td class="text-center" style="padding-top:18px;">
                                @Html.DisplayFor(modelItem => item.HorseBrand)
                            </td>
                            <td class="text-center" style="padding-top:18px;">
                                @item.HorseBirth.ToString("dd/MM/yyyy")
                            </td>
                            <td class="text-center" style="padding-top:18px;">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <a class="glyphicon glyphicon-thumbs-up" style="padding-top:13px"> @Html.ActionLink("Like", "SelecionarCavalo", new { id = item.Id })</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
