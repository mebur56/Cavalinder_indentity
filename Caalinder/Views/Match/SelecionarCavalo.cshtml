@model Caalinder.Models.HorseViewModel

@{
    ViewBag.Title = "SelecionarCavalo";
}

<h2>Selecione o seu Cavalo</h2>
@using (Html.BeginForm("Confirmar", "Match", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div>

    <h4>HorseModel</h4>
    <hr />
    @{
        var IdCavalo = Model.Id;
    }
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <input type="hidden" , value=@IdCavalo name="IdCavalo" />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.ApplicationUser.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HorseBrand)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HorseBrand)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HorseBirth)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HorseBirth)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

</div>


    <div class="form-group">
        @Html.LabelFor(model => model.Id, "Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Name", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <form action="/MatchController/Confirmar" method="post">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmar" class="btn btn-default" />
            </div>
        </form>
    </div>
}
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
